
@{
    ViewBag.Title = "Calcular precio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Ingreso los datos del marco</h2>

@using (Html.BeginForm("Calcular", "CalcularPrecio", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Ancho", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Ancho", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Ancho", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Largo", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Largo", new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("Largo", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Varilla", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("Varilla", new SelectList(@ViewBag.VarillasDisponibles), "Seleccionar", new { @class = "form-control" })
                @Html.ValidationMessage("Varilla", "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Calcular" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver", "Index", "Home")
</div>
